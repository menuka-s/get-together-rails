
<div class="user-profile">

  <div class="my_info">
    <div class= "user-name"><%=@user.name%></div>

  </div>
  <div id = "user-bio"><div id = "user-bio-header">click to edit bio</div>
  <div id = "user-bio-content"><%=current_user.bio %></div>
  <div id = "bio-textarea" style = "display:none;"><textarea id = "bio-update-field"  cols = "50" rows = "10"> <%=current_user.bio%> </textarea></div>
  <div id = "bio-button" class = "button" style = "display:none;">Save</div>
  </div>
  <div class="my_dashboard">

    <div id = "user-buttons">
    <div class="button new-event-form">
      <%= link_to "Create a New Event", new_event_path %>
    </div>

    <div class="button update-profile">
      <a href="/users/<%= @user.id %>/interests">Update Settings</a>
    </div>

    <div class="dashboard-box my-upcoming-events">
      <h4>Upcoming Events</h4>
      <% if @user.upcoming_events.length == 0 %>
        <p>You have no upcoming events.</p>
      <% else %>
        <%@user.upcoming_events.each do |event|  %>

            <a href = "/events/<%=event.id%>">
              <div class = "today-event-item">
                <div class = "today-event-name"><%=event.name%></div>
                <div class = "today-event-address"><%=event.address%></div>
                <div class = "today-event-time">in <%=distance_of_time_in_words(Time.now, event.date) %></div>
              </div>
            </a>

          <% end %>
      <% end %>
    </div>

    <div class="dashboard-box my-created-events">
      <h4>Created Events</h4>
      <% if @user.created_events.length == 0 %>
        <p>You have no created events.</p>
      <% else %>
      <ul>
        <%@user.created_events.each do |event|  %>
          <a href = "/events/<%=event.id%>">
              <li class = "user-event-item">
                <div class = "user-event-name"><%=event.name%></div>
              </li>
            </a>

          <% end %>
        </ul>
      <% end %>
    </div>

    <div class="dashboard-box my-past-events">
      <h4>Past Events</h4>
      <% if @user.past_events.length == 0 %>
        <p>You have no past events.</p>
      <% else %>
        <%@user.past_events.each do |event|  %>
            <a href = "/events/<%=event.id%>">
              <div class = "today-event-item">
                <div class = "today-event-name"><%=event.name%></div>
                <div class = "today-event-address"><%=event.address%></div>
                <div class = "today-event-time">in <%=distance_of_time_in_words(Time.now, event.date) %></div>
              </div>
            </a>
          <% end %>
      <% end %>
    </div>
  </div>
</div>
<div id = "page-footer"></div>
