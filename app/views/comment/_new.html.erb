<div class="comment-item">

  <div class="comment-user-info">
    <a href="http://www.facebook.com/app_scoped_user_id/<%=facebook_id %>"><div class = "comment-user-image"><img src = <%=userimage%>></div>
    <div class = "comment-name"><%= username %></div></a>
    <% if comment.user.id == current_user.id %>
      <div class= "delete-button">
        <%= link_to "x", event_comment_path( event.id, comment.id  ), method: :delete %>
      </div>
    <% end %>
  </div>
  <div class="comment-content"><%= content %></div>
  <div class = "comment-time"><%= timeago %> ago</div>
</div>
