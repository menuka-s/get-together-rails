<% @event.comments.each do |comment| %>
<div class="comment-item">

  <div class="comment-user-info">
    <a href="/users/public/<%= comment.user.id %>">
      <div class = "comment-user-image">
        <img src ="<%= comment.user.image_url %>">
      </div>
      <div class = "comment-name"><%= comment.user.name %></div>
    </a>
    <% if comment.user.id == current_user.id %>
      <div class= "delete-button">
        <%= link_to "x", event_comment_path( @event.id, comment.id  ), method: :delete %>
      </div>
    <% end %>
  </div>
  <div class="comment-content">
    <%= comment.content %>
  </div>
  <div class = "comment-time">
    <%= time_ago_in_words(comment.created_at - 60*60*2)  %> ago
  </div>
</div>


  <% end %>