  </div>
</div>


    <div id = "header" style="z-index:-2;">
      <div class = "logo-header" style = "font-size: 75px;">
        <a href="/">Get Together</a>
      </div>
    
    </div>

  <% end %>

  <%= yield %>

<div id = "footer">
  <% if session[:user_id] != nil %>
