  <div class="slide-menu" style="z-index: 4;">
      
    <nav class="menu" style="font-family:verdana;">
      <li><div id = "profile-circle"><img  src = <%=current_user.image_url%>></div></li>
      <li><a href="/">HOME</a></li>
